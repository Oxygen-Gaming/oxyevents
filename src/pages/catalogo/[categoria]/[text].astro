---
import Layout from "@layouts/Layout.astro";
import Container from "@components/Container.astro";

const { categoria, text } = Astro.params;

const items = [
  { text: "Simulador de Conducción", img: "SIMULADOR_DE_CONDUCCION_HORIZONTAL", categoria: "gaming", descripcion: "Vive la experiencia de manejar un coche de carreras con realismo extremo. Volante, pedales y gráficos envolventes te harán sentir en la pista." },
  { text: "Nintendo Switch", img: "NINTENDO_SWITCH_HORIZONTAL", categoria: "gaming", descripcion: "La consola híbrida de Nintendo que te permite jugar en casa o en cualquier lugar con una gran variedad de juegos exclusivos." },
  { text: "Bicicleta Zycle", img: "ZYCLE_HORIZONTAL", categoria: "gaming", descripcion: "Un rodillo inteligente para entrenamiento en interiores, ideal para ciclistas que buscan mejorar su rendimiento sin salir de casa." },
  { text: "Realidad Virtual", img: "VR_HORIZONTAL", categoria: "gaming", descripcion: "Sumérgete en mundos digitales con experiencias interactivas que te harán sentir dentro del juego." },
  { text: "Entrenador Icaros", img: "ICAROS_HORIZONTAL", categoria: "gaming", descripcion: "Dispositivo de entrenamiento en realidad virtual que combina ejercicio físico con una experiencia inmersiva única." },
  { text: "Alfombrillas de Baile", img: "DANCING_PADS_HORIZONTAL", categoria: "gaming", descripcion: "Diviértete y haz ejercicio al ritmo de la música con estas alfombrillas interactivas. ¡Sigue los pasos y mejora tu coordinación!" },
  { text: "PlayStation", img: "PLAYSTATION_HORIZONTAL", categoria: "gaming", descripcion: "Una de las consolas más populares con títulos exclusivos, gráficos de alta calidad y una experiencia de juego envolvente." },
  { text: "Ring Fit Adventure", img: "RING_FIT_HORIZONTAL", categoria: "gaming", descripcion: "Videojuego interactivo que combina fitness y aventura. Usa un aro de resistencia para realizar ejercicios mientras avanzas en el juego." },
  { text: "Balonmano", img: "BALONMANO_HORIZONTAL", categoria: "sports", descripcion: "Deporte de equipo dinámico donde los jugadores deben marcar goles lanzando el balón con la mano. Requiere velocidad, fuerza y estrategia." },
  { text: "Fútbol Sala", img: "FUTBOL_SALA_HORIZONTAL", categoria: "sports", descripcion: "Variante del fútbol tradicional que se juega en una cancha más pequeña, con reglas adaptadas para un ritmo más rápido y técnico." },
  { text: "Hockey", img: "HOCKEY_HORIZONTAL", categoria: "sports", descripcion: "Juego de equipo donde los jugadores usan un palo para golpear un disco o una bola y marcar en la portería contraria. Se juega en diferentes superficies como hielo o césped." },
  { text: "Minigolf", img: "MINIGOLF_HORIZONTAL", categoria: "sports", descripcion: "Versión compacta y divertida del golf tradicional, con obstáculos creativos y desafíos en cada hoyo. Ideal para todas las edades." },
  { text: "Voleibol", img: "VOLLEYBALL_HORIZONTAL", categoria: "sports", descripcion: "Deporte de equipo en el que dos conjuntos se enfrentan tratando de pasar el balón por encima de la red sin que toque el suelo en su campo." }
]

const item = items.find(i => i.text === text && i.categoria === categoria);


---



<Layout title={item ? item.text : "No encontrado"}>
  <main class="text-white">
        <div class="mt-[100px] lg:mt-0 w-full bg-blue-500 flex flex-col md:flex-row justify-center items-center gap-10 h-auto md:h-[600px] shadow-lg p-8">
            <a href="" class="w-full md:w-1/2 flex justify-center">
              <img class="max-w-[600px] w-full h-[30vh] md:h-[300px] lg:h-[400px] object-cover rounded-lg transform transition-transform duration-300 hover:scale-110 shadow-lg" 
                   src={`/catalogo/${item.categoria}/${item.img}.webp`} alt={item.text} />
            </a>
            <div class="flex flex-col justify-center text-white text-justify text-[18px] w-full md:w-1/2">
              <h3 class="font-bold text-[25px]">{item.text}</h3>
              <span class="lg:w-[80%]">{item.descripcion}</span>
              <a href="/catalogo">
                <button class="relative z-10 mt-10 inline-flex items-center px-10 py-2 text-lg font-bold text-blue-500 bg-white rounded shadow-lg transform transition-all duration-300 hover:scale-105 hover:shadow-2xl hover:from-blue-600 hover:to-blue-900 focus:ring-4 focus:outline-none focus:ring-blue-400 overflow-hidden group">
                  Volver
                </button>
              </a>
            </div>
          </div>
  </main>
</Layout>



