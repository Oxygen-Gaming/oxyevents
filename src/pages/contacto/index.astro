---
import Layout from "@layouts/Layout.astro";
import Container from "@components/Container.astro";
import Section from "@components/Section.astro";
import ContactForm from "@components/forms/ContactForm.astro";
---

<Layout title="Oxygen Gaming Eventos - Contacto">
  <main class="text-white">
    <section id="events" >
      <div class="flex flex-col items-center justify-center">
        <div class="p-10 text-center flex justify-center items-center flex-col gap-[5vh]">
          <h1 class="text-6xl font-syne-bold text-mainblue">Contacto</h1>
          <h3 class="text-[15px] font-syne-bold text-white">
            Nos especializamos en crear y gestionar actividades y eventos de ocio para ayuntamientos. 
            Escríbenos y descubre todas las opciones de entretenimiento y tiempo libre que podemos organizar en tu municipio.
          </h3>
        </div>
      </div>
      
      <div class="z-[-10] absolute inset-0 opacity-20 h-auto w-full mt-[100px]">
        <video autoplay muted loop class="w-full h-[60%] object-cover ">
          <source src="./public/imgs/VideoInicio_Eventos.mp4" type="video/mp4" />
        </video>
      </div>


      <div class="flex gap-[20px] flex-col lg:flex-row justify-center items-center bg-white p-[25px] md:p-[50px] w-[100%] lg:mt-0">
        
        <div class="max-w-4xl mx-auto flex flex-wrap justify-center gap-3 lg:h-[75vh]">
          <!-- Información de contacto -->
          <div class="w-full flex flex-col items-center text-center md:text-left md:items-start">
              <div class="mb-6 flex flex-col gap-[20px] p-[10px]">
                  <h2 class="text-xl font-bold text-black">OXYGENGAMING</h2>
                  <p class="text-lg text-black"><i class="fas fa-map-marker-alt text-blue-500 mr-2"></i> Muelle de la Aduana S/N, 46024, Valencia</p>
                  <p class="text-lg text-black"><i class="fas fa-phone-alt text-blue-500 mr-2"></i> +34 960 730 275</p>
                  <p class="text-lg text-black"><i class="fas fa-envelope text-blue-500 mr-2"></i> info@oxygengaming.es</p>
              </div>
              
          </div> 
        </div>


        <ContactForm />
      </div>
      
      
    </section>
  </main>
</Layout>
