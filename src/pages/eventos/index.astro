---
import Layout from "@layouts/Layout.astro";
import Container from "@components/Container.astro";
import EventsCarrousel from "@components/carrousels/EventsCarrousel.astro";
import Section from "@components/Section.astro";
---

<Layout title="Oxygen Gaming Eventos - Nuestros eventos">
  <main class="text-white">
    <Container>
      <section class="mt-20" id="events">
        <section id="events" >
          <div class="flex flex-col items-center justify-center">
            <div class="p-10 text-center flex justify-center items-center flex-col gap-[5vh]">
              <Section title="Nuestros Eventos" />
            </div>
          </div>
          
          <div class="z-[-10] absolute inset-0 opacity-20 w-full mt-[100px]">
            <video autoplay muted loop class="w-full object-cover h-[100vh] md:h-[60%] ">
              <source src="./public/imgs/VideoInicio_Eventos.mp4" type="video/mp4" />
            </video>
          </div>
    
        
        <div class="grid grid-cols-1 items-center justify-center mt-[25vh] md:mt-[35vh] lg:mt-[30vh] mb-[100px]">
          <div class="col-span-1">
            <EventsCarrousel page="true" />
          </div>
        </div>
      </section>
    </Container>
  </main>
</Layout>



