const item = items.find(i => i.name === name);
const imagesAlbal = ["event1.webp", "event2.webp"];
---
<Layout title={item ? item.name : "No encontrado"}>
  <main class="text-white">
        <div class="gap-[50px]  lg:gap-[30vh] mt-[100px] lg:mt-0 w-full bg-blue-500 flex flex-col sm:flex-row md:flex-row justify-center items-center md:h-[600px] shadow-lg p-8">
          <div class="flex items-center justify-center w-[50vh] sm:w-[150vh] md:w-[85vh] lg:w-[60vh]">
            <EventCard name={item.name} img={item.img} images={imagesAlbal} date={item.date} />
          </div>
            <div class="flex flex-col justify-center text-white text-justify text-[18px] w-full md:w-1/2">
              <h3 class="font-bold text-[25px]"><i class="fa-solid fa-location-dot"></i> {item.name}</h3>
              <span class="font-bold text-[20px] italic"><i class="fa-solid fa-calendar-days"></i> {item.date}</span>
              <span class="lg:w-[80%]">{item.description}</span>
              
              <a href="/eventos">
                <button class="relative z-10 mt-10 inline-flex items-center px-10 py-2 text-lg font-bold text-blue-500 bg-white rounded shadow-lg transform transition-all duration-300 hover:scale-105 hover:shadow-2xl hover:from-blue-600 hover:to-blue-900 focus:ring-4 focus:outline-none focus:ring-blue-400 overflow-hidden group">
                  Volver
                </button>
              </a>
            </div>
          </div>
  </main>
</Layout>