  { name: "CASAL JOVE TALES", img: "Poster de Gaming X Deport 21.webp", date: "06-01-2024", description: "Un evento juvenil con torneos, retos deportivos y experiencias interactivas pensadas para el disfrute de los más jóvenes." },
  { name: "CASAL IBAÑEZ", img: "Poster de Gaming X Deport 24.webp", date: "27-04-2024", description: "Un espacio de encuentro donde los asistentes podrán sumergirse en el mundo del gaming, los deportes y la tecnología." },
  { name: "ALCORA", img: "Poster de Gaming X Deport 25.webp", date: "28-12-2024", description: "Un evento especial en el que se unen la pasión por los videojuegos y el deporte en un entorno comunitario." },
  { name: "PUZOL", img: "Poster de Gaming X Deport 32.webp", date: "30-12-2024", description: "Un evento lleno de emoción con competiciones, desafíos y experiencias únicas para los asistentes." },
  { name: "ESPAI JOVE CHIVA", img: "Poster de Gaming X Deport 34.webp", date: "02-01-2025", description: "Un evento dirigido a la juventud, con actividades diseñadas para fomentar la participación y la diversión en comunidad." },
  { name: "CASTELLON", img: "Poster de Gaming X Deport 39.webp", date: "05-04-2024", description: "Un gran evento con una oferta variada de actividades deportivas, tecnológicas y recreativas para todas las edades." }
