---
import EventCard from "@components/cards/EventCard.astro";
const imagesAlbal = ["event1.JPG", "event2.JPG"];
---

<div class="grid lg:grid-cols-4 grid-cols-1">
  <div class="col-span-1 p-4">
    <EventCard name="EVENTO ALBAL" img="event1.JPG" images={imagesAlbal} />
  </div>
  <div class="col-span-1 p-4">
    <EventCard name="EVENTO GANDÍA" img="event1.JPG" images={imagesAlbal} />
  </div>
  <div class="col-span-1 p-4">
    <EventCard
      name="FALLA PLAZA DE LA MORERIA"
      img="event1.JPG"
      images={imagesAlbal}
    />
  </div>
  <div class="col-span-1 p-4">
    <EventCard
      name="FALLA SANTA GENOVEVA"
      img="event1.JPG"
      images={imagesAlbal}
    />
  </div>
</div>
