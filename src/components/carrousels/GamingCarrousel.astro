---
import GamingCard from "@components/cards/GamingCard.astro";
import {items} from "@components/CatalogoList.astro";

const gaming_items = items.slice(0,8)

---

<div class="grid grid-cols-1 sm:grid-cols-3 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
  {gaming_items.map((item) => (
    <div class="col-span-1 sm:p-8">
      <GamingCard text={item.text} img={item.img} />
    </div>
  ))}
</div>