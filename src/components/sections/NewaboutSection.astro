---
const images = [
  { src: "/imgs/Competición_Foto.webp", text: "TECNOLOGÍA", url: "/catalogo/#gaming" },
  { src: "/imgs/gamingxdeporte_Foto.webp", text: "DEPORTE", url: "/catalogo/#sports" },
  { src: "/imgs/Ponencias_Foto.webp", text: "PONENCIAS", url: "/catalogo" }
];
---

<section class="lg:mt-[30vh] mt-12 w-[100%]" id="about">
  <div id="sobre_nosotros" class="!w-[100%] m-0 flex flex-col items-center justify-center">
    <div id="descripcion" class="w-full h-52 bg-white text-black text-lg font-bold text-center flex items-center justify-center">
      <span class="text-[20px] p-[10px] md:text-[30px]">CREAMOS EXPERIENCIAS QUE UNEN TECNOLOGÍA, VIDEOJUEGOS Y DEPORTE</span>
    </div>
    <div class="bg-[#1AA9FF] pt-[30px] pb-[30px] w-[100%] h-[60vh] grid grid-cols-1 md:grid-cols-3 gap-4 p-4">
      {images.map((image, index) => (
        <a href={image.url} class="relative overflow-hidden rounded-lg shadow-lg group" id={`image-${index}`}>
          <img src={image.src} alt={`Imagen ${index + 1}`} class="w-full h-[150%] md:h-[100%] object-cover transition-transform duration-300 group-hover:scale-110" />
          <div class="absolute inset-0 bg-black bg-opacity-50 flex items-center justify-center text-white text-xl font-bold opacity-100">
            {image.text}
          </div>
        </a>
      ))}
    </div>
  </div>
</section>
