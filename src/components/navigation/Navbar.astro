---
import Logo from "@components/Logo.astro";
import NavButton from "@components/navigation/NavButton.astro";
import NavbarMobileButton from "@components/navigation/NavbarMobileButton.astro";
---



<nav id="navbar" class="max-[768px]:bg-white md:bg-white lg:bg-transparent  fixed w-full z-20 top-[0px] left-0 flex flex-col transition-all duration-300">
  <div class="max-w-screen-xl flex items-center justify-between mx-auto">
    <Logo />
    <div class="flex ">
      <NavbarMobileButton />
    </div>

    <ul class="hidden lg:bg-transparent lg:flex items-center justify-center  p-4 mt-4 font-medium rounded-lg lg:flex-row lg:space-x-8 md:mt-0">
      <NavButton name="INICIO" url="/" />
      <NavButton name="SOBRE NOSOTROS" url="/about-us" />
      <NavButton name="EVENTOS" url="/eventos" />
      <NavButton name="CATÁLOGO" url="/catalogo" />
      <NavButton name="CLIENTES" url="/clientes" />
      <NavButton name="CONTACTO" url="/contacto" />
      <a href="https://oxygengaming.es/">
        <button class="text-[#005FAD] border-2 border-[#005FAD] bg-white font-bold rounded px-[16px] py-[8px] sm:px-[10px] sm:py-[8px] transition-all duration-300 hover:bg-[#005FAD] hover:text-white">
          Oxygen Gaming
        </button>
      </a>
      
      
            
    </ul>
  </div>

  <div id="navbar-sticky" class=" items-center justify-between hidden w-full">
    <ul class="bg-white lg:bg-transparent flex items-center justify-center sm:gap-[15px] flex-col p-4 mt-4 font-medium rounded-lg sm:flex-row md:flex-row md:gap-[25px] lg:flex-row lg:space-x-8 md:mt-0">
      <NavButton name="SOBRE NOSOTROS" url="/about-us" />
      <NavButton name="EVENTOS" url="/eventos" />
      <NavButton name="CATÁLOGO" url="/catalogo" />
      <NavButton name="CLIENTES" url="/clientes" />
      <NavButton name="CONTACTO" url="/contacto" />
      <NavButton name="OXYGEN GAMING" url="https://oxygengaming.es/" />
    </ul>
  </div>
</nav>

<script>
  window.addEventListener("scroll", () => {
    const navbar = document.getElementById("navbar");
    const navButtons = document.getElementsByClassName("nav-button"); // Colección de elementos
    const menu_burguer = document.getElementById('menu_burguer')

    if  (window.scrollY > 50) {
        navbar.classList.add("lg:bg-white", "lg:shadow-lg", "lg:top-0");

        // Iterar sobre todos los botones para cambiar el color
        for (let button of navButtons) {
            button.style.color = "black";
        }
        menu_burguer.style.color = "black"
    } else {
      navbar.classList.remove("lg:bg-white", "lg:shadow-lg", "lg:top-0");

        // Restaurar el color original (ajústalo según sea necesario)
        for (let button of navButtons) {
            button.style.color = ""; // Vuelve al color por defecto del CSS

            menu_burguer.style.color = ""
        }
      }
});


</script>
